@model User

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="login-form login-form-left">
    <div class="agile-row">
        <h3>Giriş Formu</h3>
        <span class="fa fa-lock"></span>
        <div class="clear"></div>
        <div class="login-agileits-top">
            <form method="post" asp-action="Login" asp-controller="Login">
                <input type="text" class="name" name="Mail" placeholder="Mail Adresi" required />
                <input type="password" class="password" name="Password" placeholder="Şifre" required />

                <input type="submit" value="Giriş Yap" />
            </form>

        </div>
        <div class="login-agileits-bottom">
            <h6><a href="#">Şifremi Unutum</a></h6>
        </div>
    </div>
</div>